<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#602020c4">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Set Number of Lines"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        />

    <NumberPicker
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:spinnerMode="dialog"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/set_lines_number">

    </NumberPicker>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:background="@drawable/dialog_buttons"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="30dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#60bb0000"
            android:id="@+id/set_lines_cancel"
            android:text="CANCEL"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#60bb0000"
            android:text="Set"
            android:id="@+id/set_lines_set"/>
    </LinearLayout>
</LinearLayout>