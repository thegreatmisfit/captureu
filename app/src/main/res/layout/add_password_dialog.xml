<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="#602020c4"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Add Key"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/head_add_pass"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Type Passphrase"
        android:textSize="20dp"
        android:password="true"
        android:id="@+id/add_key_text"
        android:layout_marginTop="20dp"
        android:background="@drawable/title_add_dialog"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Retype Passphrase"
        android:textSize="20dp"
        android:password="true"
        android:id="@+id/add_key_text2"
        android:background="@drawable/title_add_dialog"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:background="@drawable/dialog_buttons"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="30dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#60bb0000"
            android:id="@+id/add_key_cancel"
            android:text="CANCEL"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#60bb0000"
            android:text="ADD"
            android:id="@+id/add_key_add"/>
    </LinearLayout>
</LinearLayout>