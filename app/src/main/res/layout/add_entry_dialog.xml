<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#142954"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Add Entry"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/head_add_dialog"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Title"
        android:textSize="24dp"
        android:id="@+id/add_entry_dialog_title"
        android:background="@drawable/title_add_dialog"
        />
    <EditText
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:scrollbars="vertical"
        android:layout_margin="10dp"
        android:id="@+id/add_entry_dialog_data"
        android:padding="10dp"
        android:background="@drawable/dialog_add_inner_back"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#7a0707"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#60bb0000"
            android:id="@+id/add_entry_dialog_cancel"
            android:text="CANCEL"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#60bb0000"
            android:text="ADD"
            android:id="@+id/add_entry_dialog_add"/>
    </LinearLayout>
</LinearLayout>